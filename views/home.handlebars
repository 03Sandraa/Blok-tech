<section class="bodyJouProfiel">

    <h1>Jouw profiel</h1>
    <form action="/avatar" method="post" enctype="multipart/form-data">
        <div class="profielfotoDiv">
            <img src="images/NoAvatar.jpg" alt="" class="stockFoto">
            <img src="{{user.profielfoto}}" alt="Eigen profielfoto" name="avatar" class="eigenProfielfotoGr"
                onerror="this.style.display='none'">
            <img src="images/icons/uploadicon.png" alt="" class="uploadFotoOverlay hidden">
            <button>Profielfoto wijzigen</button>
            <input type="file" name="avatar" accept=".jpeg" onchange="this.form.submit()">
        </div>
        {{!-- <input type="file" name="avatar" accept=".jpeg" onchange="this.form.submit()"> --}}
    </form>
    <form action="/createprofile" method="post">
        <input type="text" id="froepnaam" name="roepnaam" value="{{user.roepnaam}}" placeholder="Wat is jou naam?"
            required>
        <div class="grow-wrap">
            <textarea id="fomschrijving" name="omschrijving" placeholder="Vertel iets over jezelf"
                onInput="this.parentNode.dataset.replicatedValue = this.value">{{user.omschrijving}}</textarea>
        </div>
        <button>Opslaan</button>
    </form>
</section>